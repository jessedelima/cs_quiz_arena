# Configurações do Servidor
PORT=8000
NODE_ENV=development
API_VERSION=v1

# Configurações do Banco de Dados
DATABASE_URL="postgresql://username:password@localhost:5432/cs_quiz_arena?schema=public"
REDIS_URL="redis://localhost:6379"

# Configurações de Autenticação
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# Steam API Configuration
STEAM_API_KEY=your-steam-api-key-from-steamcommunity
STEAM_RETURN_URL=http://localhost:3000/auth/steam/return
STEAM_REALM=http://localhost:3000

# Configurações de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@csquizarena.com
FROM_NAME="CS Quiz Arena"

# Configurações de Pagamento
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key

# Configurações de Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Segurança
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-key

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Cache
CACHE_TTL=3600

# Configurações de Torneios
TOURNAMENT_MIN_PLAYERS=2
TOURNAMENT_MAX_PLAYERS=50
TOURNAMENT_DEFAULT_ENTRY_FEE=10
TOURNAMENT_HOUSE_EDGE=0.1

# Configurações de Webhook
WEBHOOK_SECRET=your-webhook-secret-for-external-services