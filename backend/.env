# Servidor
PORT=8000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Banco de Dados
DATABASE_URL="file:./dev.db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Steam OAuth
STEAM_API_KEY=your-steam-api-key
STEAM_RETURN_URL=http://localhost:8000/api/v1/auth/steam/return
STEAM_REALM=http://localhost:8000

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com
EMAIL_PROVIDER=gmail

# Frontend
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-change-this-in-production

# Logs
LOG_LEVEL=debug

# Cache (Redis - opcional para desenvolvimento)
# REDIS_URL=redis://localhost:6379

# Pagamentos (para implementação futura)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-token

# Upload (para implementação futura)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Webhooks (para implementação futura)
# WEBHOOK_SECRET=your-webhook-secret

# Torneios
TOURNAMENT_AUTO_START=true
TOURNAMENT_MIN_PARTICIPANTS=2
TOURNAMENT_MAX_PARTICIPANTS=100

# Segurança
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Desenvolvimento
DEBUG=cs-quiz-arena:*